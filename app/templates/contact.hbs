<div class="container">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-4 col-md-offset-4">
            <h1 class="text-center">Contact us</h1>
        </div>
    </div>
    <div class="form-horizontal form-group form-group-lg row">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-6 col-md-offset-3">
                {{input type="email" value=contactEmail class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
                {{textarea rows="5" value=contactMessage class="form-control" placeholder="Please type your message." autofocus="autofocus"}}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
                {{#if responseMessage}}
                    <div class="alert alert-success text-center">{{responseMessage}}</div>
                {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-4 col-md-offset-4">
                <button class="btn btn-primary btn-lg btn-block btn-block--modify" disabled={{isDisabled}} {{action 'sendMessage'}}>Send message</button>
            </div>
        </div>
    </div>
</div>